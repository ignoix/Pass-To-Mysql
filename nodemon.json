{
  "watch": [
    "app/**/*.js",
    "app/**/*.html",
    "public/**/*.js",
    "public/**/*.css",
    "app.js"
  ],
  "ignore": [
    "node_modules/**/*",
    "uploads/**/*",
    "*.csv",
    "*.log"
  ],
  "ext": "js,html,css,json",
  "delay": 1000,
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true
}
